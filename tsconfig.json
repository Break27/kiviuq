{
    "compilerOptions": {
        "module": "esnext",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "resources/js/*"
            ],
        }
    },
    "include": [
        "resources/js"
    ],
    "exclude": [
        "node_modules",
        "public",
        "resources/js/app.ts",
        "resources/js/bootstrap.ts"
    ]
}
